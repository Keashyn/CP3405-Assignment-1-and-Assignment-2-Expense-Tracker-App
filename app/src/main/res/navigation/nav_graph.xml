<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.cp3405b1.expensetrackerapp.view.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_ViewBudgetFragment"
            app:destination="@id/ViewBudgetFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_dashboardFragment_to_addTransactionFragment"
            app:destination="@id/addTransactionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_dashboardFragment_to_transactionDetailsFragment"
            app:destination="@id/transactionDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_dashboardFragment_to_aboutFragment"
            app:destination="@id/aboutFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/addTransactionFragment"
        android:name="com.cp3405b1.expensetrackerapp.view.add.AddTransactionFragment"
        android:label="fragment_add_transaction"
        tools:layout="@layout/fragment_add_transaction">
        <action
            android:id="@+id/action_addTransactionFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/addTransactionFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/transactionDetailsFragment"
        android:name="com.cp3405b1.expensetrackerapp.view.details.TransactionDetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_transaction_details">
        <argument
            android:name="transaction"
            app:argType="com.cp3405b1.expensetrackerapp.model.Transaction" />
        <action
            android:id="@+id/action_transactionDetailsFragment_to_editTransactionFragment"
            app:destination="@id/editTransactionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_transactionDetailsFragment_to_errorDialog"
            app:destination="@id/errorDialog" />
    </fragment>
    <fragment
        android:id="@+id/editTransactionFragment"
        android:name="com.cp3405b1.expensetrackerapp.view.edit.EditTransactionFragment"
        android:label="Edit Transaction"
        tools:layout="@layout/fragment_edit_transaction">
        <argument
            android:name="transaction"
            app:argType="com.cp3405b1.expensetrackerapp.model.Transaction" />
        <action
            android:id="@+id/edit_to_details"
            app:destination="@id/transactionDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.cp3405b1.expensetrackerapp.view.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />



    <fragment
        android:id="@+id/ViewBudgetFragment"
        android:name="com.cp3405b1.expensetrackerapp.budget.ListBudgetFragment"
        android:label="Budget List"
        tools:layout="@layout/fragment_view_budget" >
        <action
            android:id="@+id/action_ViewBudgetFragment_to_AddBudgetFragment"
            app:destination="@id/AddBudgetFragment" />
        <action
            android:id="@+id/action_ViewBudgetFragment_to_EditBudgetFragment"
            app:destination="@id/EditBudgetFragment" />
    </fragment>
    <fragment
        android:id="@+id/AddBudgetFragment"
        android:name="com.cp3405b1.expensetrackerapp.budget.AddBudgetFragment"
        android:label="Add Budget"
        tools:layout="@layout/fragment_add_budget" >
        <action
            android:id="@+id/action_AddBudgetFragment_to_ViewBudgetFragment"
            app:destination="@id/ViewBudgetFragment" />
    </fragment>
    <fragment
        android:id="@+id/EditBudgetFragment"
        android:name="com.cp3405b1.expensetrackerapp.budget.EditBudgetFragment"
        android:label="Edit Budget"
        tools:layout="@layout/fragment_edit_budget" >
        <action
            android:id="@+id/action_EditBudgetFragment_to_ViewBudgetFragment"
            app:destination="@id/ViewBudgetFragment" />
        <argument
            android:name="currentBudget"
            app:argType="com.cp3405b1.expensetrackerapp.budget.Budget" />
    </fragment>



    <dialog
        android:id="@+id/errorDialog"
        android:name="com.cp3405b1.expensetrackerapp.view.dialog.ErrorDialog"
        android:label="ErrorDialog"
        tools:layout="@layout/error_dialog_layout">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="message"
            app:argType="string" />

    </dialog>
</navigation>
